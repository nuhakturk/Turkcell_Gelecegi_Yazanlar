
@{
    ViewData["Title"] = "Index";
}
@model List<Product> 
<h1>Ürünler</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td><a asp-controller="products" asp-action="remove" 
                     asp-route-id="@item.Id">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
